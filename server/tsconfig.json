{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/env.d.ts", "./src/types"],
    "allowImportingTsExtensions": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}